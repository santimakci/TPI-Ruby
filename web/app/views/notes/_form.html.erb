<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="row">

    <div class="col s6 offset-s3">
    <div class="card">
    <div class="card-panel z-depth-5">

        <!-- Form Username Input Section -->

        <div class="col s12 m12 l12">
            <div class="input-field">
                <i class="material-icons prefix">title</i>
                   <%= form.label :title %>
                    <%= form.text_field :title %>
            </div>
        </div>
        <div class="col s12 m12 l12">
            <div class="input-field">
                <i class="material-icons prefix">format_color_text</i>
                  <%= form.text_area :text, class: 'input-size' %>
            </div>
        </div>
        <div class="field">
          <% if params[:format] %>
            <%= form.hidden_field :book_id, :value => params[:format]%>
          <%end%>
        </div>
        <div class="field">
          <% if params[:format] %>
            <%= form.hidden_field :user_id, :value => current_user.id%>
          <%end%>
        </div>

        <div class="center">
              <input id="iniciar" type="submit" name="commit" value="Aceptar" class="waves-effect waves-light btn " 
               style="width:100%; background-color: #B22222; color:white">       
        </div>
    </div>
    </div>
    </div>
</div>



<% end %>


